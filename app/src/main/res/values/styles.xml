<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom theme for full screen activities and no action bar -->
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <!-- Set of custom styles for text views -->

    <style name="SplashScreenText">
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="typeface">PermanentMarker</item>
        <item name="fontAssetExtension">ttf</item>
    </style>

    <style name="TableText">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="fontAssetExtension">ttf</item>
    </style>

    <style name="TableText.Header">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="typeface">Ubuntu-Medium</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

    <style name="TableText.Content">
        <item name="android:textSize">14sp</item>
        <item name="typeface">Ubuntu-Regular</item>
        <item name="fontAssetExtension">ttf</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MatchOverviewText">
        <item name="android:gravity">center</item>
        <item name="fontAssetExtension">ttf</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MatchOverviewText.TeamName">
        <item name="android:textSize">13sp</item>
        <item name="typeface">Ubuntu-Light</item>
    </style>

    <style name="MatchOverviewText.Goals">
        <item name="typeface">Ubuntu-Regular</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_button_orange_light</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_button_orange_dark</item>
    </style>

</resources>
