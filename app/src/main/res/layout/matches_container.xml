<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:showIn="@layout/activity_home">

    <LinearLayout
        android:id="@+id/match_container_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <selantoapps.soccerleaguesimulator.view.widget.MatchView
            android:id="@+id/match_1"
            layout="@layout/match"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <selantoapps.soccerleaguesimulator.view.widget.MatchView
            android:id="@+id/match_2"
            layout="@layout/match"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <selantoapps.soccerleaguesimulator.view.widget.MatchView
            android:id="@+id/match_3"
            layout="@layout/match"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/match_container_1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <selantoapps.soccerleaguesimulator.view.widget.MatchView
            android:id="@+id/match_4"
            layout="@layout/match"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <selantoapps.soccerleaguesimulator.view.widget.MatchView
            android:id="@+id/match_5"
            layout="@layout/match"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <selantoapps.soccerleaguesimulator.view.widget.MatchView
            android:id="@+id/match_6"
            layout="@layout/match"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>